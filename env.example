# Production Configuration Example
# Copy this file to application-prod.properties and fill in your values

# Database Configuration
DB_URL=jdbc:mysql://your-db-host:3306/jobboard
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Mail Configuration
MAIL_HOST=smtpout.secureserver.net
MAIL_PORT=465
MAIL_USERNAME=your@email.com
MAIL_PASSWORD=your_email_password
ADMIN_EMAIL=admin@yourdomain.com

# JWT Secret (use a strong random string, minimum 256 bits)
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-minimum-256-bits-required

# CORS Origins (comma-separated list of allowed frontend URLs)
CORS_ORIGINS=https://www.jobfresh.in,https://jobfresh.in

# Server Port
PORT=8080
